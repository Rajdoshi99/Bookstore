<html>

<head>
    <!-- SITE TITTLE -->
    <%- include('../partials/header'); %>
</head>

<body>

    <%- include('../partials/head'); %>

    <!--Navbar-->
    <%- include('../partials/navbar'); %>
  
        <div class="container mt-5 mb-5">
            <div class="row justify-content-center">
                <%if(category == null && products.length == 0){%>
                    <h3>We found no results for "<%= search %>"</h3>
                <%} else if(search != null){%>
                    <h3>We found following results for "<%= search %>"</h3>
                <%}%>
                    
                <h3><%= category %></h3>
            </div>
            
            <div class="d-flex justify-content-center row">
                
                <div class="col-md-10">

                    <% products.forEach( (product)=> { %>
                        <div class="row p-2 bg-white border rounded">
                            <div class="col-md-3 mt-1">
                                <img class="img-fluid img-responsive rounded product-image" src="<%= product.file.replace('public\\','') %>" alt="Product Image" required>
                            </div>
                            <div class="col-md-6 mt-1">
                                <h5>
                                    <%= product.title %>
                                </h5>
                                <h6>Description:</h6>
                                <div class="mt-1 mb-1 spec-1">
                                    <p class="text-justify para mb-0">
                                        <%= product.description.split("\n").slice(0,2) %>
                                    </p>
                                </div>
                            </div>
                            <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                                <div class="d-flex flex-row align-items-center">
                                    <h6 class="text-dark"><i class="fas fa-map-marker-alt"> <%= product.city %></i></h6>
                                </div>
                                <div class="d-flex flex-row align-items-center">
                                    <h4 class="mr-1">â‚¹ <%= product.price %></h4>
                                </div>
                                <h6 class="text-success">Free shipping</h6>
                               
                                <form action="/product/<%=product.title%>">
                                    <div class="d-flex flex-column mt-4">
                                        <button class="btn btn-primary btn-sm" type="submit">Details</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <% }); %>

                </div>
            </div>
        </div>
</body>

</html>